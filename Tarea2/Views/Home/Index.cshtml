@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron row" style="display:flex; flex-direction:row; justify-content: space-between">
    <div class="col-md-7" style="justify-content: space-between">
        <h1 style="font-weight:bold">BIENVENIDO</h1>
        <h2  style="color: #57050b; font-size: 3.5rem" class="lead">Sistema de mantenimiento para acceso premiere</h2>
    </div>
    <div class="col-md-3">
        <img class="img-responsive img-circle" src="~/Resources/logo.jpg" alt="Alternate Text" />
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="thumbnail">
            <img  src="~/Resources/personas.jpg" height="" alt="Personas" />
            <div class="caption">
                <h2>@Html.ActionLink("Personas", "Index", "personas")</h2>
                <p>Mantenimiento para personas.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="thumbnail">
            <img src="~/Resources/peliculas.jpeg" alt="peliculas" />
            <div class="caption">
                <h2>@Html.ActionLink("Peliculas", "Index", "peliculas")</h2>
                <p>Mantenimiento para peliculas.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="thumbnail">
            <img src="~/Resources/access.jpg" alt="cine" />
            <div class="caption">
                <h2>@Html.ActionLink("Acceso Premier", "Index", "acceso_premier")</h2>
                <p>Mantenimiento para acceso premier de peliculas.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="thumbnail">
            <img src="~/Resources/rol.jpg" alt="roles" />
            <div class="caption">
                <h2>@Html.ActionLink("Roles", "Index", "rols")</h2>
                <p>Mantenimiento para roles.</p>
            </div>
        </div>
    </div>
</div>