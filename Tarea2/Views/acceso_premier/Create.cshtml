@model Tarea2.Models.acceso_premier

@{
    ViewBag.Title = "Create";
}

<h2>Crear Acceso Premier</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <!--Label se capitalizara-->
            @Html.LabelFor(model => model.nombre_pelicula, "Nombre Pelicula", htmlAttributes: new { @class = "control-label col-md-2 text-capitalize" })
            <div class="col-md-10">
                @Html.DropDownList("nombre_pelicula", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nombre_pelicula, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <!--Label se capitalizara-->
            @Html.LabelFor(model => model.idpersona, "Persona", htmlAttributes: new { @class = "control-label col-md-2 text-capitalize" })
            <div class="col-md-10">
                @Html.DropDownList("idpersona", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idpersona, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--Boton guardar-->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <!--Enlace para regresar-->
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
